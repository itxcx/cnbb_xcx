<!--detail.wxml-->
<view class="container">
  <view class="topic-detail">
    <view class="topic-owner">
        <image class="owner-avatar" src="{{detail.org.m_logo_url}}" id="{{detail.id}}" bindtap="showUserInfo"></image>
        <view class="topic-title">{{detail.name}}</view>
        <view class="job-xinzi">{{detail.last_time}}</view>
    </view>
    <view>
        <text class="topic-desc-title">{{detail.salary}}</text>
        <text class="topic-created">{{detail.created}}</text>
    </view>
    <view class="topic-info">
        <text >{{detail.weal_tags}}</text>
    </view>
    <view >
        <text class="desc-title">岗位描述\n\n</text>
        <text class="job-desc">{{detail.remark}}</text>
    </view>
    <view >
        <text class="desc-title">\n\n岗位要求\n\n</text>
        <text class="job-desc">{{detail.post_remark}}</text>
    </view>
  </view>
  <view class="job-deliver">
<button type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="sub_deliver"> {{btn_name}} </button>
  </view>
<loading hidden="{{hidden}}">
    加载中...
  </loading>
</view>
