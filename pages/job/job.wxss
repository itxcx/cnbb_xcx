.topic-item {
    padding:30rpx;
    border-bottom: 1px solid #eee;
}

.topic-item {
  display: flex;
  align-items: center;
  flex-direction: row;
}

.member-avatar {
    margin-right: 20rpx;
    width: 160rpx;
    height: 160rpx;
    border: 1px solid #ddd;
    border-radius: .5rem;
}

.topic-info {
    flex:1;
}

.job-item{
    display: flex;
    align-items: center;
    justify-content:space-between;
}

.job-name{
    margin-right: 40rpx;
    display: block;
    width: 268rpx;
    height: 20px;
    overflow: hidden;
    line-height: 20px;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 1rem;
    color: #ea9d14;
}

.job-pay{ 
    display: block;
    font-size: .75rem;
    color: #717171;
}

.job-time{
    text-align: right;
    font-size: .75rem;
    color: #999;
}

.job-demand{
    font-size: .875rem;
}

.org-basic{
    justify-content:flex-start;
}

.job-ogr{
    margin-right: 20rpx;
    font-size: .875rem;
    line-height: 2;
}

.job-addr{
    font-size: .875rem;
}

